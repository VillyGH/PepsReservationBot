{
    "compilerOptions": {
        "module": "es2020",
        "target": "es2020",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext",
            "es2017",
            "es2020",
            "es2021"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": false,
        "noImplicitAny": false,
        "outDir": "./dist",
        "rootDir": "./src",
        "declaration": true,
        "sourceMap": true,
        "types": [
            "puppeteer",
            "jest",
            "node"
        ]
    },
    "include": [
        "src/**/*.ts",
    ],
    "exclude": [
        "node_modules",
        "dist",
    ]
}
